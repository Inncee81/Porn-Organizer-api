{
	"deploy.reloaded": {
		"packages": [
			{
				"name": "all-js-files",
				"description": "Move all .js files to remote",
				"files": ["**/*.js"],

				"deployOnChange": {
					"targets": ["porn"]
				}
			},
			{
				"name": "all-json-files",
				"description": "Move all .json files to remote",
				"files": ["**/*.json"],

				"deployOnChange": {
					"targets": ["porn"]
				}
			}
		],
		"targets": [
			{
				"type": "local",
				"name": "porn",
				"description": "shared folder for porn-api",

				"dir": "Y:/"
			}
		]
	},
	"prettier.arrowParens": "avoid",
	"cSpell.words": [
        "ageinvideo",
        "staralias",
        "subsite"
    ]
}
